import java.util.Scanner;
public class Bankbalance 
{
Static int bal=15000;
Static void Credit(int amount)
{
if(amount>bal)
{
System.out.println("Insufficient Balance: ");
System.out.println("Try again: ");
}
else
{
System.out.println("Transanction process sucessfully ");
bal=bal+amount;
}
}
Static void debit(int amount)
{
if(amount>bal)
{
System.out.println("Insufficient Balance: ");
System.out.println("Try again: ");
}
else
{
System.out.println("Transanction process sucessfully ");
bal=bal-amount;
}
}
Static void Checkbalance()
{
System.out.println("Account balance":+bal);
}
    public static void main(String[] args)
 {
   int amount,op,upi;
Scanner sc = new Scanner(System.in);
System.out.println("1.phonepay\n2.googlepay\n3.amazonpay\n4.paytm");
upi=sc.nextInt();
switch(upi)
{
case 1:
System.out.println("1.Cradit\n2Debit\n3.Checkbalance");
do
{
System.out.println("choose your option:");
op=sc.nextInt();
switch(op)
{
case 1:
System.out.print("enter amount");
amount=sc.nextInt();
credit(amount);
break;
case 2:
System.out.print("enter amount");
amount=sc.nextInt();
debit(amount);
break;
case 3:
checkbalance();
break;
}
while(op<4);
break;
}
